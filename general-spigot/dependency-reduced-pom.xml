<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>gamechest-parent</artifactId>
    <groupId>de.gamechest</groupId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>general-spigot</artifactId>
  <name>GameChest-Spigot</name>
  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <finalName>${project.name}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.6.1</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.0.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.6</version>
        <configuration>
          <archive>
            <manifestEntries>
              <Implementation-Title>${project.name}-${service.version}-${build.number}:${git.commit}</Implementation-Title>
              <Implementation-Version>${service.version}.${build.number}:${git.commit}</Implementation-Version>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <groupId>com.google.code.maven-replacer-plugin</groupId>
        <artifactId>replacer</artifactId>
        <version>1.5.3</version>
        <executions>
          <execution>
            <phase>prepare-package</phase>
            <goals>
              <goal>replace</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <file>${project.artifactId}/target/classes/plugin.yml</file>
          <replacements>
            <replacement>
              <token>version: mvn:unknown</token>
              <value>version: ${service.version}.${build.number}</value>
            </replacement>
            <replacement>
              <token>#description</token>
              <value>description: Git @ ${git.commit}</value>
            </replacement>
          </replacements>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>com.destroystokyo.paper</groupId>
      <artifactId>paper</artifactId>
      <version>1.9.4-R0.1-SNAPSHOT</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>paper-api</artifactId>
          <groupId>com.destroystokyo.paper</groupId>
        </exclusion>
        <exclusion>
          <artifactId>minecraft-server</artifactId>
          <groupId>org.spigotmc</groupId>
        </exclusion>
        <exclusion>
          <artifactId>jopt-simple</artifactId>
          <groupId>net.sf.jopt-simple</groupId>
        </exclusion>
        <exclusion>
          <artifactId>jline</artifactId>
          <groupId>jline</groupId>
        </exclusion>
        <exclusion>
          <artifactId>sqlite-jdbc</artifactId>
          <groupId>org.xerial</groupId>
        </exclusion>
        <exclusion>
          <artifactId>mysql-connector-java</artifactId>
          <groupId>mysql</groupId>
        </exclusion>
        <exclusion>
          <artifactId>fastutil-lite</artifactId>
          <groupId>co.aikar</groupId>
        </exclusion>
        <exclusion>
          <artifactId>trove4j</artifactId>
          <groupId>net.sf.trove4j</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>com.google.code.gson</groupId>
      <artifactId>gson</artifactId>
      <version>LATEST</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>de.bytelist.bytecloud</groupId>
      <artifactId>ByteCloud-Plugin-Spigot</artifactId>
      <version>2.2</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>common-spigot</artifactId>
          <groupId>de.bytelist.bytecloud</groupId>
        </exclusion>
        <exclusion>
          <artifactId>ByteCloud-Core</artifactId>
          <groupId>de.bytelist.bytecloud</groupId>
        </exclusion>
        <exclusion>
          <artifactId>PacketLib</artifactId>
          <groupId>com.github.Steveice10</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.projectlombok</groupId>
      <artifactId>lombok</artifactId>
      <version>1.16.12</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
</project>

